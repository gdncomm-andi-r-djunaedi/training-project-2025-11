# ================================
# Catalog Module Dockerfile (FAST - uses pre-built JAR)
# Usage: 
#   1. Build locally: ./mvnw -DskipTests package -pl grpc-contract,catalog
#   2. Build image: docker build -f Dockerfile.dev -t catalog-app .
# ================================

FROM eclipse-temurin:21-jre-alpine

WORKDIR /app

# Add curl for healthchecks
RUN apk add --no-cache curl

# Copy pre-built JAR (must build locally first)
COPY target/catalog.jar app.jar

EXPOSE 8081 9091

# Optimized JVM settings
ENTRYPOINT ["java", \
    "-XX:+UseContainerSupport", \
    "-XX:MaxRAMPercentage=75.0", \
    "-XX:+UseG1GC", \
    "-XX:+UseStringDeduplication", \
    "-jar", "app.jar"]












