# Database Credentials
POSTGRES_DB=marketplace_member
POSTGRES_USER=marketplace
POSTGRES_PASSWORD=marketplace_pass

MONGO_INITDB_ROOT_USERNAME=marketplace
MONGO_INITDB_ROOT_PASSWORD=marketplace_pass
MONGO_INITDB_DATABASE=marketplace_product

REDIS_PASSWORD=marketplace_pass

# JWT Configuration
JWT_SECRET=your-256-bit-secret-key-change-this-in-production
JWT_EXPIRATION_MS=86400000

# RSA Keys for Asymmetric JWT (RS256)
# Generate with: openssl genrsa -out private_key.pem 2048
# Extract public: openssl rsa -in private_key.pem -pubout -out public_key.pem
JWT_PRIVATE_KEY_PATH=classpath:keys/private_key.pem
JWT_PUBLIC_KEY_PATH=classpath:keys/public_key.pem

# Service Ports
API_GATEWAY_PORT=8080
MEMBER_SERVICE_PORT=8081
PRODUCT_SERVICE_PORT=8082
CART_SERVICE_PORT=8083

# Data Seeding
SEED_DATA_ENABLED=false
SEED_MEMBERS_COUNT=5000
SEED_PRODUCTS_COUNT=50000
